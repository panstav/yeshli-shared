{
	"env": {
		"commonjs": true,
		"es2020": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 11,
		"sourceType": "commonjs"
	},
	"extends": [
		"eslint:recommended"
	],
	"ignorePatterns": [
		"/.vscode",
		"/node_modules",
		"/dist"
	],
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"off"
		],
		"semi": [
			"error",
			"always"
		]
	}
}